#!/bin/zsh

# Масив з назвами уроків
lessons=(
  "Урок 1 - Вступ до програмування та Python"
  "Урок 2 - Робота з Google Colab та перший Python скрипт"
  "Урок 3 - Змінні та типи даних"
  "Урок 4 - Оператори та вирази"
  "Урок 5 - Введення та виведення даних"
  "Урок 6 - Робота з рядками"
  "Урок 7 - Списки та їх операції"
  "Урок 8 - Умовні конструкції: if, else, elif"
  "Урок 9 - Цикли: for та while"
  "Урок 10 - Практика з циклами"
  "Урок 11 - Функції: оголошення та виклик"
  "Урок 12 - Локальні та глобальні змінні у функціях"
  "Урок 13 - Робота з помилками: try, except"
  "Урок 14 - Словники та множини"
  "Урок 15 - Файловий ввід/вивід"
  "Урок 16 - Модулі та бібліотеки"
  "Урок 17 - Спискові включення"
  "Урок 18 - Базові поняття об’єктно-орієнтованого програмування"
  "Урок 19 - Методи та атрибути класів"
  "Урок 20 - Розробка невеликого проекту: калькулятор"
  "Урок 21 - Використання зовнішніх бібліотек"
  "Урок 22 - Візуалізація даних з matplotlib"
  "Урок 23 - Основи алгоритмів: сортування та пошук"
  "Урок 24 - Практичні завдання та розв’язання"
  "Урок 25 - Підсумковий проект та підбиття підсумків курсу"
)

# Проходимо по кожному уроку
for lesson in "${lessons[@]}"; do
    # Створюємо папку з назвою уроку (якщо папка вже існує, не виникне помилка)
    mkdir -p "$lesson"
    # Всередині папки створюємо md файл з тією ж назвою
    touch "$lesson/${lesson}.md"
done

echo "Папки та md файли успішно створені!"

